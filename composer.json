{
	"name": "david63/resetpostcount",
	"type": "phpbb-extension",
	"description": "Adds an ACP option to allow the resetting of a user's post count.",
	"version": "2.1.0",
	"time": "2019-06-21",
	"license": "GPL-2.0-only",
	"authors": [{
			"name": "David Wood",
			"role": "Developer"
		}],
	"require": {
        "php": ">=5.4,<7.1",
        "composer/installers": "~1.0"
    },
	"extra": {
		"display-name": "[*] Reset post count",
		"soft-require": {
			"phpbb/phpbb": ">=3.2.0-RC1"
    	},
		"version-check": {
        	"host": "version.phpbbdev.space",
        	"directory": "/3.2",
        	"filename": "/reset_post_count_version_file.json"
    	}
	}
}
